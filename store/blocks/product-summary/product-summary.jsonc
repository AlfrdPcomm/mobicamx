{
  "product-summary.shelf": {
    "children": [
      
      "stack-layout#prodsum",
      "flex-layout.row#highlight",
      "product-summary-space",
      "product-summary-name",
      //"flex-layout.col#productRating",
      "product-summary-space",
      "flex-layout.row#selling-price-savings",
      //"product-summary-sku-selector",
      //"product-installments#summary",
      "add-to-cart-button"
    ]
  }, 
    
  
  "add-to-cart-button":{
    "props":{
      "text": "COMPRAR AHORA",
      "unavailableText":"NO DISPONIBLE"
    }
  },

  "flex-layout.col#productRating": {
    "props": {
      "blockClass": "productRating"
    },
    "children": ["product-rating-inline"]
  },

  "stack-layout#prodsum": {
    "children": [            
      "product-summary-image#shelf",
      //"vtex.product-highlights@2.x:product-highlights"  
     //"modal-trigger#quickview" // Check quickview.jsonc
     "vtex.product-highlights@2.x:product-highlights#promotion"
    ]
  },
//--------------------------- Inicio highlight promotion -----------------------

 "vtex.product-highlights@2.x:product-highlights#promotion": {
  "children": ["product-highlight-wrapper#promotion"],  
  "props": {
      "type": "promotion"    
  }
},
  "product-highlight-wrapper#promotion": {
    "props": {
      "blockClass": "promotion"
    },
    "children": [
      "product-highlight-text#promotion"]
  },
  "product-highlight-text#promotion": {
    "props": {
      "message": "{highlightName}"
    }
  },
  
   //------------------- Fin promotion ------------------------

  "image#envioall":{
    "props":{
      "src":"assets/envio35px.png",
      "blockClass":"imagenenvio"
    }
  },

  "product-summary-image#shelf": {
    "props": {
      "showBadge": false,
      "aspectRatio": "1:1",
      "maxHeight": 300,
      "hoverImage":{  
        "criteria":"label",
        "label":"R"
      }
    }
  },
  //-------------------------------- Collection

  "vtex.product-highlights@2.x:product-highlights#collection": {
    "props": {
      "type": "collection",
      "filter": {
        "type": "show",
        "highlightNames": ["ENTREGA INMEDIATA","DECOUPAGE"]
      }
    },
    "children": ["product-highlight-text#collection"]
  },
  "product-highlight-text#collection": {
    "props": {
      "message": "{highlightName}",
      "blockClass": "highcollection"
    }
  },







